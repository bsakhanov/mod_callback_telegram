<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.2" client="site" method="upgrade">
	
	<name>Telegram Callback</name>
    <author>Aleksey A. Morozov</author>
    <authorEmail>alekvolsk@yandex.ru</authorEmail>
    <authorUrl>https://alekvolsk.pw</authorUrl>
    <copyright>Â© 2017 Aleksey A. Morozov. All right reserved.</copyright>
    <license>GNU GPL v3 or later</license>
    <version>1.0.2</version>
    <creationDate>March 2017</creationDate>
	<description><![CDATA[<h3>Telegram Callback</h3><p>The module displays on the website a feedback form that sends messages in telegram.<br><br></p>]]></description>
	<scriptfile>script.php</scriptfile>
	
	<updateservers>
		<server type="extension" priority="1" name="Telegram Callback">https://github.com/AlekVolsk/mod_telegram_callback/blob/master/mod_telegram_callback_update.xml</server>
	</updateservers>
	
	<files>
		<filename module="mod_telegram_callback">mod_telegram_callback.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
	</files>
	
	<languages folder="languages">
		<language tag="en-GB">en-GB.mod_telegram_callback.ini</language>
		<language tag="en-GB">en-GB.mod_telegram_callback.sys.ini</language>
		<language tag="ru-RU">ru-RU.mod_telegram_callback.ini</language>
		<language tag="ru-RU">ru-RU.mod_telegram_callback.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			
			<fieldset name="basic">
				<field name="token" type="text" label="MOD_TELEGRAM_CALLBACK_PRM_TOKEN_LABEL" description="MOD_TELEGRAM_CALLBACK_PRM_TOKEN_DESC" default="" class="input-xxlarge" />
				<field name="ci" type="text" label="MOD_TELEGRAM_CALLBACK_PRM_CI_LABEL" description="MOD_TELEGRAM_CALLBACK_PRM_CI_DESC" default="" />
				<field name="popupwrn" type="spacer" label="MOD_TELEGRAM_CALLBACK_PRM_CI_WRN" class="alert alert-warning input-block-level"/>
				<field name="getci" type="getci" label="" btnlabel="MOD_TELEGRAM_CALLBACK_PRM_GETCI_BTNLABEL" addfieldpath="modules/mod_telegram_callback/fields" />
				<field name="hr1" type="spacer" hr="true" />
				<field name="frontlist" type="repeatable" icon="list" label="MOD_TELEGRAM_CALLBACK_PRM_F_LABEL" description="MOD_TELEGRAM_CALLBACK_PRM_F_DESC">
					<fieldset hidden="true" name="frontlist_modal" repeat="true">
						<field name="fname" type="text" label="MOD_TELEGRAM_CALLBACK_PRM_F_NAME_LABEL" description="MOD_TELEGRAM_CALLBACK_PRM_F_NAME_DESC" />
						<field name="ftitle" type="text" label="MOD_TELEGRAM_CALLBACK_PRM_F_TITLE_LABEL" description="MOD_TELEGRAM_CALLBACK_PRM_F_TITLE_DESC" />
						<field name="ftype" type="list" label="MOD_TELEGRAM_CALLBACK_PRM_F_TYPE_LABEL" class="input-small" >
							<option value="text">MOD_TELEGRAM_CALLBACK_PRM_F_TYPE_TEXT_LABEL</option>
							<option value="email">MOD_TELEGRAM_CALLBACK_PRM_F_TYPE_EMAIL_LABEL</option>
							<option value="textarea">MOD_TELEGRAM_CALLBACK_PRM_F_TYPE_TEXTAREA_LABEL</option>
							<option value="select">MOD_TELEGRAM_CALLBACK_PRM_F_TYPE_SELECT_LABEL</option>
							<option value="checkbox">MOD_TELEGRAM_CALLBACK_PRM_F_TYPE_CHECKBOX_LABEL</option>
							<option value="radio">MOD_TELEGRAM_CALLBACK_PRM_F_TYPE_RADIO_LABEL</option>
						</field>
						<field name="flist" type="text" label="MOD_TELEGRAM_CALLBACK_PRM_F_LIST_LABEL" description="MOD_TELEGRAM_CALLBACK_PRM_F_LIST_DESC" />
						<field name="fplaceholder" type="text" label="MOD_TELEGRAM_CALLBACK_PRM_F_PLACEHOLDER_LABEL" description="MOD_TELEGRAM_CALLBACK_PRM_F_PLACEHOLDER_DESC" />
						<field name="frequired" type="checkbox" label="MOD_TELEGRAM_CALLBACK_PRM_F_REQUIRED_LABEL" />
					</fieldset>
				</field>
				<field name="showlabels" type="radio" label="MOD_TELEGRAM_CALLBACK_PRM_SHOWLABELS_LABEL" class="btn-group" default="1">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="tgmtitle" type="text" label="MOD_TELEGRAM_CALLBACK_PRM_TGMTITLE_LABEL" description="MOD_TELEGRAM_CALLBACK_PRM_TGMTITLE_DESC" />
			</fieldset>
			
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" default="_:default" />
				<field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
			
		</fields>
	</config>
	
</extension>
